{
    "openapi": "3.0.0",
    "info": {
        "title": "PokeAPI Item",
        "description": "API for retrieving Pokémon item information",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://pokeapi.co/api/v2",
            "description": "Production server"
        }
    ],
    "paths": {
        "/item/{idOrName}": {
            "get": {
                "summary": "Get item information",
                "description": "Returns detailed information about a specific Pokémon item",
                "parameters": [
                    {
                        "name": "idOrName",
                        "in": "path",
                        "required": true,
                        "description": "The ID or name of the item to retrieve",
                        "schema": {
                            "oneOf": [
                                {
                                    "type": "integer"
                                },
                                {
                                    "type": "string"
                                }
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Item"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Item not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Item": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "cost",
                    "fling_power"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "The identifier for this resource",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "description": "The name for this resource",
                        "example": "master-ball"
                    },
                    "cost": {
                        "type": "integer",
                        "description": "The price of this item in stores",
                        "example": 0
                    },
                    "fling_power": {
                        "type": "integer",
                        "description": "The power of the move Fling when used with this item",
                        "example": 10
                    },
                    "fling_effect": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    },
                    "attributes": {
                        "type": "array",
                        "description": "A list of attributes this item has",
                        "items": {
                            "$ref": "#/components/schemas/NamedAPIResource"
                        }
                    },
                    "category": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    },
                    "effect_entries": {
                        "type": "array",
                        "description": "The effect of this ability listed in different languages",
                        "items": {
                            "$ref": "#/components/schemas/VerboseEffect"
                        }
                    },
                    "flavor_text_entries": {
                        "type": "array",
                        "description": "The flavor text of this ability listed in different languages",
                        "items": {
                            "$ref": "#/components/schemas/VersionGroupFlavorText"
                        }
                    },
                    "game_indices": {
                        "type": "array",
                        "description": "A list of game indices relevant to this item by generation",
                        "items": {
                            "$ref": "#/components/schemas/GenerationGameIndex"
                        }
                    },
                    "names": {
                        "type": "array",
                        "description": "The name of this item listed in different languages",
                        "items": {
                            "$ref": "#/components/schemas/Name"
                        }
                    },
                    "sprites": {
                        "$ref": "#/components/schemas/ItemSprites"
                    },
                    "held_by_pokemon": {
                        "type": "array",
                        "description": "A list of Pokémon that might be found in the wild holding this item",
                        "items": {
                            "$ref": "#/components/schemas/ItemHolderPokemon"
                        }
                    },
                    "baby_trigger_for": {
                        "$ref": "#/components/schemas/APIResource"
                    },
                    "machines": {
                        "type": "array",
                        "description": "A list of the machines related to this item",
                        "items": {
                            "$ref": "#/components/schemas/MachineVersionDetail"
                        }
                    }
                }
            },
            "ItemSprites": {
                "type": "object",
                "properties": {
                    "default": {
                        "type": "string",
                        "description": "The default depiction of this item",
                        "example": "https://pokeapi.co/media/sprites/items/master-ball.png"
                    }
                }
            },
            "ItemHolderPokemon": {
                "type": "object",
                "required": [
                    "pokemon",
                    "version_details"
                ],
                "properties": {
                    "pokemon": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    },
                    "version_details": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ItemHolderPokemonVersionDetail"
                        }
                    }
                }
            },
            "ItemHolderPokemonVersionDetail": {
                "type": "object",
                "required": [
                    "rarity",
                    "version"
                ],
                "properties": {
                    "rarity": {
                        "type": "integer",
                        "description": "How often this Pokémon holds this item in this version",
                        "example": 50
                    },
                    "version": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    }
                }
            },
            "NamedAPIResource": {
                "type": "object",
                "required": [
                    "name",
                    "url"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "flinch"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://pokeapi.co/api/v2/item-fling-effect/7/"
                    }
                }
            },
            "APIResource": {
                "type": "object",
                "required": [
                    "url"
                ],
                "properties": {
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://pokeapi.co/api/v2/evolution-chain/1/"
                    }
                }
            },
            "VerboseEffect": {
                "type": "object",
                "required": [
                    "effect",
                    "short_effect",
                    "language"
                ],
                "properties": {
                    "effect": {
                        "type": "string",
                        "example": "Used in battle\n:   [Catches]{mechanic:catch} a wild Pokémon without fail."
                    },
                    "short_effect": {
                        "type": "string",
                        "example": "Catches a wild Pokémon every time."
                    },
                    "language": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    }
                }
            },
            "VersionGroupFlavorText": {
                "type": "object",
                "required": [
                    "text",
                    "version_group",
                    "language"
                ],
                "properties": {
                    "text": {
                        "type": "string"
                    },
                    "version_group": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    },
                    "language": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    }
                }
            },
            "GenerationGameIndex": {
                "type": "object",
                "required": [
                    "game_index",
                    "generation"
                ],
                "properties": {
                    "game_index": {
                        "type": "integer"
                    },
                    "generation": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    }
                }
            },
            "Name": {
                "type": "object",
                "required": [
                    "name",
                    "language"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "language": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    }
                }
            },
            "MachineVersionDetail": {
                "type": "object",
                "required": [
                    "machine",
                    "version_group"
                ],
                "properties": {
                    "machine": {
                        "$ref": "#/components/schemas/APIResource"
                    },
                    "version_group": {
                        "$ref": "#/components/schemas/NamedAPIResource"
                    }
                }
            }
        }
    }
}
